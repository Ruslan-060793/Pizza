@page
@model Pizza.Pages.Forms.CustomPizzaModel
@{
}

<div class="text-center container">
    <h1>Create your own pizza!</h1>
    <form method="post" class="mx-auto mt-5 mb-5 px-5 pt-5 pb-5 rounded-5 bg-light col-4">
        <input type="text" asp-for="Pizza.PizzaName" placeholder="Give your a name...." />Pizza Name <br />
        <input type="checkbox" asp-for="Pizza.TomatoSauce" /> TomatoSauce <br />
        <input type="checkbox" asp-for="Pizza.Pineapple" /> Pineapple <br />
        <input type="checkbox" asp-for="Pizza.Mushroom" /> Mushroom <br />
        <button class="btn btn-primary mt-1" type="submit">
            Order My Pizza
        </button>
    </form>
</div>
